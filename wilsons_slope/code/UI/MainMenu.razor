@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root>



	<div class="header">	
		<h1 class="game-title">Slope</h1>
		<img class="icon" src="icons/icon.png" alt="">	
	</div>

	<div class="button-container">
		<div class=button onclick=@OnStarted><p>Start</p></div>
		<div class=button onclick=@OnSettings><p>Options</p></div>
		<div class=button onclick=@OnExit><p>Exit</p></div>
	</div>
	
	

	

	
</root>

@code
{


	void OnStarted()
	{
		Log.Info("Started Game");
		Scene.Load(SceneManager.Instance.GetSceneFile(1));
	}

	void OnSettings()
	{
		Log.Info("Opened Settings");
	}
	void OnExit()
	{
		Log.Info("Exited Game");
	}
	

	protected override int BuildHash() 
	{
		return System.HashCode.Combine("");
	}
}
@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root>
	<div class="vitals">
		<p class="health">❤️@playerHealth.currentHealth</p>
		<p class="timer">🕒@GetCurrentTimeToString()</p>
	</div>
</root>

@code
{

	[Property] PlayerTimer playerTimer {get; set;}
	[Property] PlayerHealth playerHealth{get; set;}
	[Property]	PlayerStateManager playerStateManager{get; set;}
	

	string GetCurrentTimeToString()
	{
		var timer = playerTimer.playerCurrentTime;
		var minutes = (int)timer/60;
		var seconds = (int)timer%60;
		return $"{minutes:00}:{seconds:00}";
	}
	protected override int BuildHash() 
	{
		return System.HashCode.Combine(playerHealth.currentHealth, GetCurrentTimeToString() );
	}
}